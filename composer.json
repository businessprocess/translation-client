{
    "name": "pervozdanniy/translation-client",
    "description": "Client for translation API",
    "homepage": "http://dev-api.translate.center/api-docs/",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Danylo",
            "email": "pervozadiy@gmail.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.2",
        "psr/simple-cache": "^1.0",
        "guzzlehttp/guzzle": "^5.0|^6.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~2.1"
    },
    "autoload": {
        "psr-4": {
            "Translate\\": "src/"
        }
    },
    "scripts": {
        "cs": "php-cs-fixer fix -v --diff --dry-run",
        "cs-fix": "php-cs-fixer fix -v --diff"
    }
}
